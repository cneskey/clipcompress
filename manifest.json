{
  "manifest_version": 3,
  "name": "ClipCompress",
  "version": "1.0.0",
  "description": "Compress clipboard images with live preview",
  "permissions": [
    "storage",
    "clipboardRead",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_width": 452,
    "default_height": 600
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}